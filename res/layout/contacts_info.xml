<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

<RelativeLayout
    android:id="@+id/info_avatar_layout"
    android:layout_width="fill_parent"
    android:layout_height="250dp" >

    <ImageView
        android:id="@+id/info_avatar_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0099ff"
        android:contentDescription="@string/app_name" />

    <com.xiaodevil.views.CircleImageView
        android:id="@+id/circleImageView1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:src="@drawable/avatar_cat"
        app:border_color="@color/background_material_dark"
        app:border_width="2dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:text="AAA"
        android:textSize="30sp" />

</RelativeLayout>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <ListView
        android:id="@+id/user_phone_number_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
</LinearLayout>
